generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Salon {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  district    String?
  image       String?
  rating      Float    @default(0)
  featured    Boolean  @default(false)
  description String?
  createdAt   DateTime @default(now())

  bookings    Booking[]
  reviews     Review[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  salonId   Int
  name      String
  phone     String
  date      DateTime
  createdAt DateTime @default(now())

  salon     Salon    @relation(fields: [salonId], references: [id])
}

model Review {
  id        Int      @id @default(autoincrement())
  salonId   Int
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  salon     Salon    @relation(fields: [salonId], references: [id])
}
