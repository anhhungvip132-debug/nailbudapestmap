// app/page.js
"use client";

import { useEffect, useState } from "react";

import Header from "../components/ui/Header";
import HeroSlider from "../components/ui/HeroSlider";
import SearchBar from "../components/ui/SearchBar";
import CategoryList from "../components/ui/CategoryList";
import PromoBanner from "../components/ui/PromoBanner";
import FeaturedSalons from "../components/ui/FeaturedSalons";
import PromoSlider from "../components/ui/PromoSlider";
import Map from "../components/ui/Map";
import ChatWidget from "../components/ui/ChatWidget";
import ContactSection from "../components/ui/ContactSection";
import BlogSection from "../components/ui/BlogSection";

export default function HomePage() {
  const [allSalons, setAllSalons] = useState([]);
  const [nearestSalons, setNearestSalons] = useState([]);
  const [loadingNearest, setLoadingNearest] = useState(true);

  /* üÜï TH√äM THEO Y√äU C·∫¶U */
  const [activeFilters, setActiveFilters] = useState({});
  const [filteredSalons, setFilteredSalons] = useState([]);

  /** ============================================================
   * 1) T·∫¢I TO√ÄN B·ªò SALON (fallback)
   * ============================================================ */
  useEffect(() => {
    async function load() {
      try {
        const res = await fetch("/api/salons");
        const data = await res.json();

        setAllSalons(data);
        setNearestSalons(data.slice(0, 3)); // fallback
      } catch (err) {
        console.error("Kh√¥ng t·∫£i ƒë∆∞·ª£c salons:", err);
      }
    }

    load();
  }, []);

  /** ============================================================
   * 2) L·∫§Y V·ªä TR√ç USER ‚Üí T√åM SALON G·∫¶N NH·∫§T
   * ============================================================ */
  useEffect(() => {
    if (!("geolocation" in navigator)) {
      setLoadingNearest(false);
      return;
    }

    navigator.geolocation.getCurrentPosition(
      async (pos) => {
        try {
          const lat = pos.coords.latitude;
          const lng = pos.coords.longitude;

          const res = await fetch(
            `/api/nearest?lat=${lat}&lng=${lng}&limit=3`
          );

          if (res.ok) {
            const data = await res.json();
            if (data.length > 0) {
              setNearestSalons(data);
            }
          }
        } catch (error) {
          console.error("L·ªói g·ªçi API nearest:", error);
        } finally {
          setLoadingNearest(false);
        }
      },
      () => {
        // Ng∆∞·ªùi d√πng t·ª´ ch·ªëi ‚Üí d√πng fallback 3 salon ƒë·∫ßu
        setLoadingNearest(false);
      }
    );
  }, []);

  /** ============================================================
   * 3) TR·∫¢ V·ªÄ GIAO DI·ªÜN TRANG CH·ª¶
   * ============================================================ */
  return (
    <div className="bg-white text-gray-800">
      <Header />
      <HeroSlider />
      <SearchBar />
      <CategoryList />
      <PromoBanner />

      {/* ========== TI·ªÜM G·∫¶N B·∫†N ========== */}
      <section className="max-w-7xl mx-auto mt-20 px-4">
        <h2 className="text-3xl md:text-4xl font-bold text-center mb-8">
          Ti·ªám nail g·∫ßn v·ªã tr√≠ c·ªßa b·∫°n
        </h2>

        {loadingNearest ? (
          <p className="text-center text-gray-500">ƒêang t√¨m ti·ªám g·∫ßn b·∫°n‚Ä¶</p>
        ) : (
          <>
            <FeaturedSalons salons={nearestSalons} />
            <Map salons={nearestSalons} />
          </>
        )}
      </section>

      {/* SLIDER KHUY·∫æN M√ÉI */}
      <PromoSlider />

      {/* BLOG */}
      <BlogSection />

      {/* FORM LI√äN H·ªÜ */}
      <ContactSection />

      {/* CHAT WIDGET */}
      <ChatWidget />
    </div>
  );
}
