useEffect(() => {
  if (!navigator.geolocation) return;

  navigator.geolocation.getCurrentPosition(
    (pos) => {
      fetch(`/api/nearest?lat=${pos.coords.latitude}&lng=${pos.coords.longitude}`)
        .then((res) => res.json())
        .then((data) => setNearby(data))
        .catch(() => setNearby([]));
    },
    () => setNearby([])
  );
}, []);
